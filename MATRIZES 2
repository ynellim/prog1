#include <stdio.h>

int main(){

int i, j, m[2][2], qnt_impar= 0;                                                                      //informe quantos números ímpares tem em cada coluna;



    printf("Por favor, digite os elementos da matriz:\n");
     for(i=0; i<2; i++){
        for(j=0;j<2;j++){
          scanf("%d", &m[i][j]);
   }
 }


     for(i=0; i<2; i++){
          for(j=0;j<2;j++){
             if((m[i][j]%2) == 1) {

            qnt_impar++;

          }
       }
     }

        printf("Quantidade de numeros impares da matriz\: %d\n", qnt_impar);


system("pause");
}

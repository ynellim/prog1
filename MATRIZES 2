#include <stdio.h>

int main(){

int i, j, m[2][2];                                                                      //informe quantos números ímpares tem em cada coluna;



    printf("Por favor, digite os elementos da matriz:\n");
     for(i=1; i<=2; i++){
        for(j=1;j<=2;j++){
          scanf("%d", &m[i][j]);
   }
 }


     for(i=1; i<=2; i++){
          for(j=1;j<=2;j++){
             if((m[i][j]%2) == 1) {

            printf("Cads coluna tem: %d de impar\n", m[i][j]);
          }
       }
     }

system("pause");
}
